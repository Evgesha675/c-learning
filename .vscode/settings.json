{
    "editor.fontFamily": "'JetBrains Mono', 'Cascadia Code', monospace",
    "editor.fontLigatures": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "background.fullscreen": {
        // Local images can be dragged into the browser to quickly get the file protocol address from the address bar
        "images": ["https://i.imgur.com/txt50Lw.jpg"],
        "opacity": 0.1,
        "size": "cover",
        "position": "center",
        "interval": 0,
        "random": false
    },
    // `sidebar` and `panel` have the same config as `fullscreen`
    "background.sidebar": {},
    "background.panel": {},
    "multiCommand.commands": [
        {
            "command": "multiCommand.runPythonAndFocusTerminal",
            "sequence": [
                "python.execInTerminal",
                { "command": "delay", "args": 200 },
                "workbench.action.terminal.focus"
            ]
        }
    ]
}